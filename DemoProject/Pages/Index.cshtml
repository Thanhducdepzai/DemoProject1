@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    ViewData["IsHomePage"] = true;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        /* CSS cho trang Home */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            background: url('/images/background.png') no-repeat center center fixed;
            background-size: cover;
        }

        .container {
            width: 100%;
            margin: 0 auto;
            text-align: center;
            position: relative; 
        }

        .header {
            padding: 20px;
            background-color: transparent; 
        }

        .main-content {
            display: flex;
            justify-content: space-between;
            padding: 40px;
            margin: 20px auto;
            width: 80%;
            position: relative; 
            z-index: 1; 
        }

            .main-content .left, .main-content .right {
                flex: 1;
                margin: 10px;
            }

            .main-content .left {
                background-color: #dfffe0; 
                padding: 40px;
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

                .main-content .left h1, .main-content .left h2, .main-content .left h3 {
                    margin: 0;
                    color: #333;
                }

            .main-content .buttons {
                margin-top: 20px;
            }

            .main-content button {
                border: none;
                padding: 15px 30px;
                font-size: 18px;
                margin: 10px;
                cursor: pointer;
                border-radius: 5px;
            }

        .green-button {
            background-color: #4CAF50;
            color: white;
        }

        .yellow-button {
            background-color: #FFD700;
            color: black;
        }

        .green-button:hover {
            background-color: #45a049;
        }

        .yellow-button:hover {
            background-color: #ffc700;
        }

        .right {
            position: relative;
            z-index: 2;
            background-color: transparent;
        }

        .support-info {
            background-color: rgba(173, 216, 230, 0.8);
            padding: 20px;
            border-radius: 10px;
        }

        .hotline {
            background-color: rgba(220, 220, 220, 0.8);
            padding: 10px;
            border-radius: 5px;
            margin-top: 10px;
        }

        .green-rectangle {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 50px;
            background-color: #4CAF50;
            z-index: 1; 
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

            .green-rectangle a {
                color: white;
                text-decoration: none;
                font-weight: bold;
                padding: 5px 10px;
                border-radius: 5px;
            }

                .green-rectangle a:hover {
                    background-color: #45a049;
                }
    </style>
</head>
<body>
    <div class="container">
        <div class="green-rectangle">
            <a href="#">Vào thi</a>
            <a href="#">Vào tự luyện</a>
        </div>
        <div class="header">
            <!-- Logo removed -->
        </div>

        <div class="main-content">
            <div class="left">
                <h1>CHÀO MỪNG BẠN ĐẾN VỚI</h1>
                <h2>TỰ LUYỆN IDE</h2>
                <h3>VÒNG 35</h3>
                <div class="buttons">
                    <button class="green-button">Vào tự luyện ngay</button>
                    <button class="yellow-button">Lịch thi</button>
                </div>
            </div>
            <div class="right support-info">
                <h4>Thông tin hỗ trợ</h4>
                <div class="hotline">
                    <p>Hotline1: 0936003961<br>Từ 8h30 đến 11h30 (T2-T6)</p>
                </div>
                <div class="hotline">
                    <p>Hotline2: 0818165923<br>Từ 8h30 đến 11h30 (T2-T6)</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="~/js/home.js"></script>
}
