@page
@model DemoProject.Pages.FillBlankModel
@{
    ViewData["Title"] = "Fill Blank";
}

<div class="quiz-page-container quiz-background">
    <div class="quiz-content">
        <div class="quiz-main">
            <div class="question-box">
                <p class="question">..., tui là công túa chinh đẹp.</p>
                <form method="post">
                    <input type="text" name="Answer" class="answer-input" placeholder="Type your answer here" />
