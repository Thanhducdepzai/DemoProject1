@page
@model DemoProject.Pages.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!-- Sign up form -->
<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Sign up</h2>
                <form method="POST" class="register-form" id="register-form">
                    <div class="form-group">
                        <label asp-for="student.StudentId" for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="student.StudentId" type="text" name="name" id="name" placeholder="Your Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="student.StudentGmail" for="email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for="student.StudentGmail" type="email" name="email" id="email" placeholder="Your Email" />
                    </div>
                    <div class="form-group">
                        <label asp-for="student.StudentPassword" for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="student.StudentPassword" type="password" name="pass" id="pass" placeholder="Password" />
                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input type="password" name="re_pass" id="re_pass" placeholder="Repeat your password" />
                    </div>             
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="images/signup-image.jpg" alt="sing up image"></figure>
                <a asp-page="Login" class="signup-image-link">I've had account already</a>
            </div>
        </div>
    </div>
</section>

